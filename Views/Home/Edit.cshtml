@model Expense

<h3>Better save next time! :)</h3>
<hr />
<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="upload-form">
            <form asp-action="Edit" method="post">
                <div class="form-group row">
                    <label asp-for="Content" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Content" class="form-control" required />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Price" class="form-control" required />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Date" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Date" class="form-control" placeholder="MM/dd/yyyy" required />
                    </div>
                </div>
                <div class="form-inline">

                    <input type="submit" value="Update" class="btn btn-primary" />
                    <div style="width: 10px"></div>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>