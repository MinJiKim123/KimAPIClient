@model IndexViewModel
@{
    ViewData["Title"] = "Your Main Page";
}

<div class="form-inline" style="margin-top:10px; margin-bottom:0px">
    <h2>@Model.CurrentMonth</h2>
    <div style="width: 20px"></div>
    <a asp-action="ViewLog" class="btn btn-outline-dark">View History</a>
</div>
    <div class="row">
        <div class="col-md-11">
            <br />
            <h5>Total Expense this month is $@Model.TotalExpense</h5>
        </div>
        <div class="col-md-1" style="margin-bottom: 15px">
            <a asp-action="Create" class="plus radius"></a>
        </div>
    </div>

    <table class="table">
        <tbody>
            @foreach (var item in Model.Expenses)
            {
                <tr class="rgRow">
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary showOnHover">Edit</a>
                    </td>
                    <td>
                        @Html.Partial("DeleteFormPartial", item)
                    </td>
                </tr>
            }
        </tbody>
    </table>


